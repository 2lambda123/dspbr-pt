{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "./src/lib/**/*"
  ],
  "exclude": [
    "./src/lib/three_renderer.ts"
  ]
}