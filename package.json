{
  "name": "dspbr-pt",
  "version": "0.3.5",
  "description": "A WebGL2 Enterprise PBR sample renderer",
  "dependencies": {
    "@gltf-transform/core": "^1.2.1",
    "@gltf-transform/extensions": "^1.2.1",
    "@gltf-transform/functions": "^1.2.1",
    "@types/three": "^0.131.0",
    "three": "^0.138.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/runtime": "^7.17.2",
    "@parcel/packager-ts": "^2.3.2",
    "@parcel/transformer-glsl": "^2.3.2",
    "@parcel/transformer-typescript-types": "^2.3.2",
    "argparse": "^2.0.1",
    "buffer": "^6.0.3",
    "copyfiles": "^2.4.1",
    "dat.gui": "^0.7.9",
    "electron": "^8.5.5",
    "parcel": "^2.3.2",
    "replace-in-files-cli": "^1.0.0",
    "shx": "^0.3.4",
    "simple-dropzone": "^0.8.1",
    "typescript": "^4.6.2"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/*",
    "dev": "npm run clean && npm run copy-assets && parcel src/viewer/index.html --port 3000 --public-url / --open",
    "build-lib": "npm run clean && parcel build src/lib/index.ts --public-url / --no-source-maps && npm run copy-libs",
    "build-viewer": "npm run clean && parcel build src/viewer/index.html --public-url / --no-source-maps && npm run copy-assets",
    "build-cli": "npm run clean && parcel build src/cli/headless.html --no-optimize --public-url ./",
    "copy-assets": "shx cp -R src/viewer/assets dist/",
    "copy-libs": "copyfiles -u 2 src/lib/bvh.js src/lib/bvh.d.ts src/lib/index.d.ts dist/",
    "validation": "npm run build-cli && python scripts/run_validation.py",
    "prepublishOnly": "shx mv README.md src/viewer/README.md && shx cp src/lib/README.md README.md",
    "postpublish": "shx mv src/viewer/README.md README.md",
    "render": "electron src/cli/offscreen.js --enable-logging"
  },
  "files": [
    "/dist",
    "!/src/",
    "!/node_modules/",
    "!.DS_Store"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt"
  },
  "author": "Bastian Sdorra <bastian.SDORRA@3ds.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt/issues"
  },
  "homepage": "https://github.com/DassaultSystemes-Technology/dspbr-pt#readme"
}
