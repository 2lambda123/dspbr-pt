{
  "name": "dspbr-pt",
  "version": "0.3.5",
  "description": "A WebGL2 Enterprise PBR sample renderer",
  "dependencies": {
    "@gltf-transform/core": "^2.1.4",
    "@gltf-transform/extensions": "^2.1.4",
    "@gltf-transform/functions": "^2.1.4",
    "@types/three": "^0.139.0",
    "meshoptimizer": "^0.17.0",
    "three": "^0.139.2"
  },
  "devDependencies": {
    "@parcel/transformer-glsl": "^2.4.1",
    "argparse": "^2.0.1",
    "buffer": "^6.0.3",
    "dat.gui": "^0.7.9",
    "electron": "^8.5.5",
    "electron-serve": "^1.1.0",
    "open": "^8.4.0",
    "os-browserify": "^0.3.0",
    "parcel": "^2.5.0",
    "patch-package": "^6.4.7",
    "regenerator-runtime": "^0.13.9",
    "shx": "^0.3.4",
    "simple-dropzone": "^0.8.1"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/*",
    "dev": "npm run clean && npm run copy-assets && parcel src/viewer/index.html --port 3000 --public-url / --open",
    "build-lib": "npm run clean && parcel build src/lib/index.ts --dist-dir dist/ --public-url ./ --no-source-maps",
    "build-viewer": "shx rm -rf demo/dev && parcel build --target viewer",
    "build-cli": "npm run clean && parcel build --target cli",
    "copy-assets": "shx cp -R src/viewer/assets dist/",
    "validation": "npm run build-cli && python scripts/run_validation.py",
    "prepublishOnly": "shx mv README.md src/viewer/README.md && shx cp src/lib/README.md README.md",
    "postpublish": "shx mv src/viewer/README.md README.md",
    "render": "electron src/cli/offscreen.js --enable-logging",
    "postinstall": "npx patch-package"
  },
  "targets": {
    "viewer": {
      "source": "src/viewer/index.html",
      "distDir": "./demo/dev",
      "publicUrl": "./",
      "sourceMap": false
    },
    "cli": {
      "source": "src/cli/headless.html",
      "distDir": "./dist",
      "publicUrl": "./",
      "optimize": false
    }
  },
  "source": "src/lib/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "!/src/",
    "!/node_modules/",
    "!.DS_Store"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt"
  },
  "author": "Bastian Sdorra <bastian.SDORRA@3ds.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt/issues"
  },
  "homepage": "https://github.com/DassaultSystemes-Technology/dspbr-pt#readme"
}
